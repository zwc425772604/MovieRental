<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>users.UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>users.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerInfo</servlet-name>
        <servlet-class>users.CustomerInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReturnServlet</servlet-name>
        <servlet-class>movieData.ReturnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentServlet</servlet-name>
        <servlet-class>movieData.RentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/UserAddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerInfo</servlet-name>
        <url-pattern>/CustomerInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReturnServlet</servlet-name>
        <url-pattern>/ReturnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentServlet</servlet-name>
        <url-pattern>/RentServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
